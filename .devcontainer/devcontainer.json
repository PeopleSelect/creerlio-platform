{
  "name": "Creerlio Platform",
  "forwardPorts": [3000, 5007, 5088],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "silent",
      "visibility": "public",
      "requireLocalPort": false,
      "elevateIfNeeded": false
    },
    "5007": {
      "label": "Backend API",
      "onAutoForward": "silent",
      "visibility": "public",
      "requireLocalPort": false,
      "elevateIfNeeded": false
    },
    "5088": {
      "label": "Backend HTTPS",
      "onAutoForward": "silent",
      "visibility": "public",
      "requireLocalPort": false,
      "elevateIfNeeded": false
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "remote.autoForwardPorts": false,
        "remote.forwardOnOpen": false,
        "remote.portsAttributes": {
          "3000": {
            "label": "Frontend",
            "onAutoForward": "silent"
          },
          "5007": {
            "label": "Backend API",
            "onAutoForward": "silent"
          },
          "5088": {
            "label": "Backend HTTPS",
            "onAutoForward": "silent"
          }
        }
      }
    }
  },
  "postCreateCommand": "chmod +x /workspaces/creerlio-platform/scripts/*.sh && echo 'âœ… Creerlio Platform initialized. Frontend is in frontend/frontend-app/'",
  "postStartCommand": "bash /workspaces/creerlio-platform/scripts/start-services.sh",
  "remoteUser": "codespace"
}
